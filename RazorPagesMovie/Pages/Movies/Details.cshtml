@page "{id:int}"
@model RazorPagesMovie.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = "Details";
    var daysSinceRelease = (((DateTime.Now.Year - Model.Movie.ReleaseDate.Year) * 365) + (DateTime.Now.DayOfYear - Model.Movie.ReleaseDate.DayOfYear)).ToString();
}

<style>
    dl.dl-horizontal.details-table dt,
    dl.dl-horizontal.details-table dd,
    dl.dl-horizontal.details-table dd:after {
        clear: none;
    }
</style>

<h2>Details</h2>

<div>
    <h4>@Model.Movie.Title</h4>
    <hr />
    <dl class="dl-horizontal details-table">
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie.ReleaseDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.ReleaseDate)
        </dd>
        <dt>
            Days since release
        </dt>
        <dd>
            @daysSinceRelease
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Rating)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Rating)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-default" asp-page="./Index">« Back to List</a>
    <a class="btn btn-default" asp-page="./Edit" asp-route-id="@Model.Movie.ID">Edit</a>
</div>
